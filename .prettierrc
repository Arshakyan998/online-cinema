{
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "printWidth": 80,
  "tabWidth": 2,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "plugins": [
    "prettier-plugin-organize-imports",
    "prettier-plugin-sort-imports"
  ],
  "importOrder": ["^[a-z]", "^[./]", "^@/(.*)$"],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": false
}
